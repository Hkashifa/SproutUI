?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz2"
    android:background="@drawable/gradient"
    android:orientation="vertical">

    <TextView
        android:id="@+id/q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="Question 2"
        android:textColor="#2A4E96"
        android:textSize="32dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="360dp"
        android:layout_height="532dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"

        android:background="@drawable/quiz_bg">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="326dp"
            android:layout_height="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/path_179"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="97dp" />

        <RadioGroup
            android:layout_width="302dp"
            android:layout_height="351dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.618"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="121dp">

            <RadioButton
                android:id="@+id/rarely"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:buttonTint="#4AA4E5"
                android:onClick="onRadioButtonClicked"
                android:text="Rarely"
                android:textColor="#4AA4E5"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/sometimes"
                android:layout_width="wrap_content"

                android:buttonTint="#4AA4E5"
                android:onClick="onRadioButtonClicked"
                android:layout_height="80dp"
                android:text="Sometimes"
                android:textColor="#4AA4E5"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/oftens"
                android:layout_width="126dp"
                android:layout_height="80dp"
                android:buttonTint="#4AA4E5"
                android:onClick="onRadioButtonClicked"
                android:text="Often"
                android:textColor="#4AA4E5"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                android:buttonTint="#4AA4E5"
                android:onClick="onRadioButtonClicked"
                android:text="All the time"
                android:textColor="#4AA4E5"
                android:textSize="20dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="258dp"
            android:layout_height="44dp"
            android:text="Choose your usual level of anger"
            android:textColor="#4AA4E5"
            android:textSize="24dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="32dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_shape"
        android:text="Take Survey"

        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:backgroundTint="#4AA4E5" />


</LinearLayout>