?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Survey_Complete"
    android:background="@drawable/gradient"
    android:orientation="vertical">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="360dp"
        android:layout_height="532dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"

        android:background="@drawable/quiz_bg">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="326dp"
            android:layout_height="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/path_179"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="97dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/path_179"
            tools:layout_editor_absoluteY="432dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="132dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/check_mark" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="263dp"
            android:layout_height="75dp"
            android:textAlignment="center"
            android:text="You have completed the survey well done"
            android:textColor="#4AA4E5"
            android:textSize="24dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="329dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="40dp"

        android:layout_marginRight="16dp"

        android:background="@drawable/button_shape"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:backgroundTint="#4AA4E5"
        app:layout_constraintEnd_toEndOf="parent" />


</LinearLayout>